<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Tic Tac Toe</title>
    <link href="css/main.css" rel="stylesheet">
</head>
<body>  
<h1>TicTacToe</h1> 
<div id="container">
    <!--<form action="/turn" method="post" enctype="multipart/form-data"> -->
        <button id="top_left" onclick="foo(this)" class="btn"></button>
        <button id="top_middle" onclick="foo(this)" class="btn"></button>
        <button id="top_right" onclick="foo(this)" class="btn"></button>
        <button id="middle_left" onclick="foo(this)" class="btn"></button>
        <button id="middle_middle" onclick="foo(this)" class="btn"></button>
        <button id="middle_right" onclick="foo(this)" class="btn"></button>
        <button id="bottom_left" onclick="foo(this)" class="btn"></button>
        <button id="bottom_middle" onclick="foo(this)" class="btn"></button>
        <button id="bottom_right" onclick="foo(this)" class="btn"></button>
    <!--</form> -->
	<form action="/" method="post" enctype="multipart/form-data">
		<button id="reset">Reset</button> 
    </form>
</div>

<script
    src="https://code.jquery.com/jquery-3.2.1.min.js"
></script>
<script>
    $(document).ready(function() {
        $(".btn").click(function(){
            this.prop('value', 'this');
            var btnNr = this.id;
            btnNr = "#" + btn;

            $(btn).prop('value', btnNr);
        });
    });

</script>
<script type="text/javascript">
var count = 0;
var foo = function(param) {
    
    if(count % 2 == 0){
        param.innerHTML = "X";
    }

    if(count % 2 != 0){
        param.innerHTML= "O";
    }

    count = count + 1;
    
};
</script>
</body>
</html>
